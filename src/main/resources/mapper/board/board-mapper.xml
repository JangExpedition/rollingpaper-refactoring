<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sh.rollingpaper.board.model.dao.BoardDao">
<select id="selectBoardList" resultMap="boardMap">
	select
		*
	from
		rollingpaper.`BOARD`
	where
		owner_no = #{ownerNo}
</select>
<resultMap type="board" id="boardMap"></resultMap>
<insert id="insertBoard">
	insert into 
		rollingpaper.`BOARD`
	values(
	next value for SEQ_BOARD_NO, #{ownerNo}, #{writer}, #{title}, #{content}
	)
</insert>
<select id="selectOneBoard" resultMap="boardMap">
	select
		*
	from
		rollingpaper.`BOARD`
	where
		no = #{no}
</select>
<delete id="deleteBoard">
	delete from
		rollingpaper.`BOARD`
	where
		no = #{no}
</delete>
<update id="updateBoard">
	update 
		rollingpaper.`BOARD`
	<set>
		<if test="title != null and title != ''">
			title = #{title},
		</if>
		<if test="content != null and content != ''">
			content = #{content}
		</if>
	</set>
	where
		no = #{no}
</update>
</mapper>